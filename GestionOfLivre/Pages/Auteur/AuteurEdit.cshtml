@page
@model GestionOfLivre.Pages.Auteur.AuteurEdit.AuteurEditModel
@{
    <br />
    <h2>Les informations de l'auteur : </h2>
    <form method="post">
        <input type="hidden" name="IDAuteur" value="@Model.Auteurinfo.IDAuteur" asp-for="Auteurinfo.IDAuteur">
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">NomAuteur</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="NomAuteur" value="@Model.Auteurinfo.NomAuteur" asp-for="Auteurinfo.NomAuteur">
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">EmailAuteur</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="EmailAuteur" value="@Model.Auteurinfo.EmailAuteur" asp-for="Auteurinfo.EmailAuteur">
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">telephoneAut</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="telephoneAut" value="@Model.Auteurinfo.telephoneAut" asp-for="Auteurinfo.telephoneAut">
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">AdressAut</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="AdressAut" value="@Model.Auteurinfo.AdressAut" asp-for="Auteurinfo.AdressAut">
            </div>
        </div>

        <div class="row mb-3">
            <div class="offset-sm3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary"> Submit </button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-primary" href="/Auteur/Auteur" role="button">Cancel</a>
            </div>
        </div>
    </form>
}
